@model IEnumerable<FE_AgentGuard.Models.Models.Agent>

@{
    ViewData["Title"] = "Index";
}

<h1>סוכנים</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                שם
            </th>
            <th>
                מיקום בציר X
            </th>
            <th>
                מיקום בציר Y
            </th>
            <th>
                בפעולה
            </th>
            <th>
                תמונה
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.x)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.y)
            </td>
                <td>
                    @(item.is_active ? "בפעולה" : "רדום")
                </td>
                <td>
                    <img src="@item.photoUrl" alt="Photo of @item.nickname" class="agent-photo" />
                </td>
            <td>
                    <div class="btn btn btn-primary"><a asp-action="Details" asp-route-id="@item.Id">Details</a> </div>
            </td>
        </tr>
}
    </tbody>
</table>
