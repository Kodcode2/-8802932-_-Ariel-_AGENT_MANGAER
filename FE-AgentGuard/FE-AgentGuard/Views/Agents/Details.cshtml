@model FE_AgentGuard.Models.Models.Agent

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Agent</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            שם כינוי
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nickname)
        </dd>
        <dt class = "col-sm-2">
            מיקום בציר X
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.x)
        </dd>
        <dt class = "col-sm-2">
            מיקום על ציר Y
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.y)
        </dd>
        <dt class = "col-sm-2">
            בפעילות
        </dt>
        <dd class = "col-sm-10">
            @(Model.is_active? "בפעולה":"רדום")
        </dd>
        <dt class = "col-sm-2">
            תמונה
        </dt>
        <dd class="col-sm-2">
            <img src="@Model.photoUrl" alt="Photo of @Model.nickname" class="agent-photo" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
