@model FE_AgentGuard.Models.Models.Target

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Target</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            שם
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            מעמד
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.position)
        </dd>
        <dt class="col-sm-2">
            מיקום בציר X
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.x)
        </dd>
        <dt class="col-sm-2">
            מיקום בציר Y
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.y)
        </dd>
        <dt class="col-sm-2">
            חוסל?
        </dt>
        <dd class="col-sm-10">
            @(Model.is_active ? "חי" : "חוסל")
        </dd>
        <dt class="col-sm-2">
            תמונה
        </dt>
        <dd class="col-sm-2">
            <img src="@Model.photoUrl" alt="Photo of @Model.name" class="agent-photo" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
